<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>PKhotel.web.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>PKhotel.web.servlet.ChangePasswordServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ChangeRoomServlet</servlet-name>
        <servlet-class>PKhotel.web.servlet.ChangeRoomServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ChangeEmployeesServlet</servlet-name>
        <servlet-class>PKhotel.web.servlet.ChangeEmployeesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddEmployeesServlet</servlet-name>
        <servlet-class>PKhotel.web.servlet.AddEmployeesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteEmployeesServlet</servlet-name>
        <servlet-class>PKhotel.web.servlet.DeleteEmployeesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ChangeManagerServlet</servlet-name>
        <servlet-class>PKhotel.web.servlet.ChangeManagerServlet</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/changePasswordServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ChangeRoomServlet</servlet-name>
        <url-pattern>/changeRoomServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ChangeEmployeesServlet</servlet-name>
        <url-pattern>/changeEmployeesServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddEmployeesServlet</servlet-name>
        <url-pattern>/addEmployeesServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteEmployeesServlet</servlet-name>
        <url-pattern>/deleteEmployeesServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ChangeManagerServlet</servlet-name>
        <url-pattern>/changeManagerServlet</url-pattern>
    </servlet-mapping>

</web-app>